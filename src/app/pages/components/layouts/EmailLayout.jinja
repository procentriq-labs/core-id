{#def title, recipient_email #}
{#css https://rsms.me/inter/inter.css #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title></title>
</head>
<body style="margin: 0; padding: 0; font-family: sans-serif; color: #1f2937; background-color: #ffffff;">
  <div style="margin: 0 auto; width: 100%; max-width: 28rem; padding: 1rem; padding-bottom: 2.5rem; border-radius: 0.5rem; line-height: 1.75;">
    <div style="border-bottom: 1px solid #e5e7eb; padding-bottom: 1rem;">
      <a href="#" style="font-size: 1.25rem; font-weight: 600; color: #000000; text-decoration: none;">{{ title }}</a>
    </div>
    <div style="margin-top: 1rem;">
      {{ content }}
    </div>
    <div style="border-top: 1px solid #1f2937; margin: 1.5rem 0; color: #9ca3af; font-size: 0.75rem; font-weight: 300;">
      <p>This email was sent to {{ recipient_email }}.</p>
    </div>
    <div style="text-align: center; margin-top: 1.5rem; color: #4b5563; font-size: 0.875rem;">
      <div>
        <span>
          Powered by CoreID
        </span>
      </div>
    </div>
  </div>
</body>
</html>